<%= form_for @product, :html => { :class => "form-horizontal" } do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :user_id, :value => current_admin.id %>

   <div class="control-group">
    <%= f.label :name, :class => "control-label" %><br />
    <div class="controls">
      <%= f.text_field :name, :class => "input-xlarge" %>
    </div>
  </div>

   <div class="control-group">
    <%= f.label :price, :class => "control-label" %><br />
    <div class="controls">
      <%= f.text_field :price, :class => "input-xlarge" %>
    </div>
  </div>

   <div class="control-group">
    <%= f.label :weight, :class => "control-label" %><br />
    <div class="controls">
      <%= f.text_field :weight, :class => "input-xlarge" %>
    </div>
  </div>

   <div class="control-group">
    <%= f.label :amount, :class => "control-label" %><br />
    <div class="controls">
      <%= f.text_field :amount, :class => "input-xlarge" %>
    </div>
  </div>

   <div class="control-group">
    <%= f.label :category_id, :class => "control-label" %><br />
    <div class="controls">
      <%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :name), {:prompt => "Zaznacz kategorie"} %>
    </div>
  </div>

   <div class="control-group">
    <%= f.label :manufacturer_id, :class => "control-label" %><br />
    <div class="controls">
      <%= f.select :manufacturer_id, options_from_collection_for_select(Manufacturer.all, :id, :name), {:prompt => "Zaznacz producenta"} %>
    </div>
  </div>


  <div class="control-group">
    <%= f.label :description, :class => "control-label" %><br />
    <div class="controls">
      <%= f.text_area :description, :class => "input-xxlarge", :rows => 10 %>
    </div>
  </div>
   <div class="form-actions">
     <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>

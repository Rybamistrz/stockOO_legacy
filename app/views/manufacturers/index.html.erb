<div class="page-header">
  <h1>Listing manufacturers</h1>
</div>

<table class="table">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
  </tr>

<% @manufacturers.each do |manufacturer| %>
  <tr>
    <td><%= manufacturer.name %></td>
    <td><%= link_to 'Edit', edit_manufacturer_path(manufacturer) %></td>
    <td><%= link_to 'Destroy', manufacturer, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% content_for :sidebar do %>
  <div class="well">
    <ul class="nav nav-list">
       <li class="nav-header">Lista opcji:</li>
       <li class="divider"></li>
       <li>
         <%= link_to new_manufacturer_path do %>
           <i class="icon-plus"></i>
           Nowy produkt
         <% end %>
       </li>
    </ul>
  </div>
<% end %>
